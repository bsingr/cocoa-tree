doctype html
html
  head
    title Cocoatree
    meta name="keywords" content="cocoapods"
    meta name="author" content="Jens Bissinger"
    link href="bootstrap/css/bootstrap.min.css" rel="stylesheet"
    link href="bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet"
    link href="bootstrap-glyphicons/css/bootstrap-glyphicons.css" rel="stylesheet"
    link href="assets/css/style.css" rel="stylesheet"
    script type="text/javascript" src="assets/js/jquery.min.js"
    script type="text/javascript" src="bootstrap/js/bootstrap.min.js"
    script type="text/javascript" src="assets/js/app.js"
  body
    .container
      h1 = "#{pods.count} Pods"
    .container
      .row.categories
      .row.tags
    .container
      - pods_by_stars.each do |pod|
        a data-toggle="collapse" data-target="#pod-#{pod.name}"
          .row.pod
            .col-lg-9
              .row.title = pod.name
              .row.summary = pod.spec.summary
            .col-3.stars
              - if pod.stars > -1
                = pod.stars
                span.glyphicon.glyphicon-star
        .row.collapse.pod-details id="pod-#{pod.name}"
          .row
            a href=pod.url target="_blank" = pod.url
    #footer.container
      .row
        .col-lg-12 Copyright &copy; 2013 Jens Bissinger
